<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="10px"
        android:text="STEP 1: Enroll your voice."
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/header"
        android:paddingTop="5dp"
        android:paddingLeft="10px"
        android:paddingRight="5dp"
        android:text="Read the below voice phrase by holding the mic."
        android:textColor="#999999"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tokenString"
        android:paddingLeft="10px"
        android:paddingRight="5dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/recordStart"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:tint="#000"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="10px"
        android:paddingTop="40dp"
        android:text="STEP 2: Authenticate your voice."
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="5dp"
        android:paddingLeft="10px"
        android:paddingRight="5dp"
        android:text="Hold the mic and speak any enrolled voice phrase."
        android:textColor="#999999"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/authStart"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:tint="#000"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>